
@using E_Ticaret_Uygulamasi.Models
@model IEnumerable<Sepet>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Sepet</h2>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Urunler.UrunAdi)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Adet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToplamFiyat)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Urunler.UrunAdi)
            </td>
            <td>
                <form action="/Sepet/SepetGuncelle" method="post">
                    <input type="hidden" name="id" id="id" value="@item.SepetID" />
                    <input type="number" name="adet" id="adet" value="@item.Adet" />
                    <input type="submit" id="gonder" name="gonder" value="Güncelle" />
                </form>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ToplamFiyat)
            </td>
            <td>
                @Html.ActionLink("Sil", "Sil", new { id = item.SepetID }, new { @class = "btn btn-danger btn-xs" })
            </td>

        </tr>
    }

    <tr>
        <th>Toplam</th>
        <th>@Model.Sum(x => x.Adet)</th>
        <th>@Model.Sum(x => x.ToplamFiyat) </th>
    </tr>

    <tr>
        <td>
            <a href="/Home/Index" class="btn btn-primary">Alışverişe Devam Et</a>
        </td>
        <td colspan="3" style="text-align:right">
            <a href="/Siparis/SiparisTamamla" class="btn btn-success">Alışverişi Tamamla</a>
        </td>
    </tr>
</table>




